<h1>Lista de Productos</h1>

<div class="table-responsive">
  <table class="table">

  <thead>
    <tr>
      <th>Nombre</th>
      <th>Stock</th>
      <th>Foto</th>
      <th>Precio</th>
      <th>Categoria</th>
      <th>Comprar</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.stock %></td>
        <td><%= product.photo %></td>
        <td><%= product.precio %></td>
        <td><%= product.category.try( :name) %></td>
        <% if user_signed_in? %>
        <td class="btn btn-warning"><%= link_to "AÃ‘ADIR", add_to_cart_path(product_id: product.id) %> </td>
        <% else %>
        <td>INICIAR SESION PARA COMPRAR</td>
        <% end %>

      </tr>
    <% end %>
  </tbody>

</table>
</div>




